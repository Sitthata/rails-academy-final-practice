<%= form_with(model: @quest, local: true, class: "bg-base-300 rounded-lg p-4 w-full") do |f| %>
  <div class="flex flex-col space-y-5">
    <%= f.text_field :name, placeholder: "Quest Name", class: "input w-full", id: "quest-name-field" %>
    <%= f.label :completed do %>
      <%= f.check_box :completed, class: "checkbox", id: "quest-completed-field" %>
      mark as completed
    <% end %>
    <%= f.submit "Add Quest", class: "btn btn-primary", id: "add-quest-button" %>
  </div>
<% end %>